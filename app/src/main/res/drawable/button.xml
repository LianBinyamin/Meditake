<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF9999"/>
            <stroke android:color="@color/headline" android:width="1dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="60dp" />
            <size
                android:height="20dp"
                android:width="90dp" />
            <gradient
                android:angle="90"
                android:startColor="#FF9999"
                android:endColor="#4ce9fa"
                android:type="linear" />
        </shape>
    </item>
</selector>