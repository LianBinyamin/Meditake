<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity"
    android:background="@drawable/background2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_msg_notification"
        android:text="@string/notification_msg"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:fontFamily="@font/comfortaa_regular"
        android:textColor="@color/myblue"
        android:layout_marginTop="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/take_btn"
        android:layout_below="@+id/text_msg_notification"
        android:text="Taken"
        android:drawableRight="@drawable/ic_check"
        android:layout_marginStart="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snooze_btn"
        android:layout_below="@+id/text_msg_notification"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:text="Snooze"
        android:drawableRight="@drawable/ic_alarm"
        android:layout_marginTop="20dp"
        android:textSize="20dp"/>

</RelativeLayout>