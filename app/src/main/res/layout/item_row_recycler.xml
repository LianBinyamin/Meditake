<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@drawable/rectangle">

        <ImageView
            android:id="@+id/image_recycler"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_meditake"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_recycler"
            android:layout_toEndOf="@+id/image_recycler"
            android:layout_marginLeft="8dp"
            android:text="Acamol"
            android:textSize="25dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_recycler"
            android:layout_below="@+id/name_recycler"
            android:layout_alignStart="@+id/name_recycler"
            android:text="22:00"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doses_recycler"
            android:layout_below="@+id/name_recycler"
            android:layout_toEndOf="@+id/time_recycler"
            android:layout_marginLeft="15dp"
            android:text="@string/doses_text_recycler"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>