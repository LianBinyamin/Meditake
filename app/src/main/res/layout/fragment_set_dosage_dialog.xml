<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetDosageDialogFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/plus_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/edit_amount_dosage"
            android:background="@drawable/plus_btn" />

        <EditText
            android:id="@+id/edit_amount_dosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:inputType="number"
            android:text="@string/number_days_edit_text"
            android:textAlignment="center"
            android:textSize="25dp" />


        <Button
            android:id="@+id/minus_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@+id/edit_amount_dosage"
            android:background="@drawable/minus_btn" />


    </RelativeLayout>

</FrameLayout>